<p id="notice"><%= notice %></p>
<div class="pull-right">
  <%= link_to 'New doctor', new_doctor_path, class: "btn btn-sm btn-primary" %>
  <%= link_to 'Back', dashboard_path, class: "btn btn-sm btn-default" %>

</div>
<h1>All Users</h1>

<table class="table table-bordered table-hover" >
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>School Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor|
      if doctor.role != "receptionist" %>
      <tr>
        <td><%= doctor.email %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.school_name %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.city %></td>
        <td><%= doctor.state %></td>
        <td><%= doctor.zip %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end;end %>
  </tbody>
</table>

